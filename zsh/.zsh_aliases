# Common Hosts
export PI_AWS="ec2-54-186-253-144.us-west-2.compute.amazonaws.com"
export PI_SERVER="192.168.1.92"

# Applications
alias chrome="google-chrome &> /dev/null"
alias spotify="spotify &> /dev/null"

# Git
alias gitpurge='git branch --merged | grep -v "\*" | grep -v "master" | xargs -n 1 git branch -d'

# System Utils
alias rm="rm -i"
alias psg="ps aux | grep -i"
alias rest="systemctl suspend"
alias off="systemctl poweroff"
alias lo="gnome-session-quit --logout --no-prompt"

# Emacs
alias e="emacsclient -c"
alias emc="emacsclient -c"
alias em="emacsclient -t"
alias emax="emacsclient -t"

# Systemctl
alias ctl="systemctl"
alias ctlu="systemctl --user"
alias ctllint="systemd-analyze verify"
alias ctlulint="systemd-analyze --user verify"

# Email
alias mindex="mu index --maildir ~/.mail"